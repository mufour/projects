{% extends 'base.html.twig' %}

{% block title "Toutes les recettes" %}

{% block body %}
	<h3>CEST LA LISTE DE TOUTES LES CATEGORIES DE RECETTES</h3>
	<p>
		<a class="btn btn-primary btn-sm" href="{{ url('category.create')}}">Ajouter une catégorie de recette</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Nb recettes</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.name | default }}</td>
					<td>{{ category.count }}</td>
					<td>
						<div class="d-flex gap-1">
							<a class="btn btn-primary btn-sm" href="{{ url('category.edit', {id: category.id}) }}">Modifier la catégorie</a>
							<form action="{{ url('recipe.delete', {id: category.id}) }}" method="post">
								<input type="hidden" name="_method" value="DELETE">
								<button type="submit" class="btn btn-danger btn-sm">Supprimer la catégorie</button>
							</form>
						</div>
					</td>
				</tr>
			</tbody>

		{% endfor %}
	</tbody>
</table>{% endblock %}
